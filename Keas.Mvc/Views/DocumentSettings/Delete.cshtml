@model Keas.Core.Domain.TeamDocumentSetting

@{
    ViewData["Title"] = "Delete Document Setting";
}


<div class="card">
  <div class="card-header-primary">
    <div class="card-head">
      <div class="row justify-content-between">
        <h2>Delete Document Setting</h2>
        <a class="btn btn-link " asp-action="Index"><i class="fas fa-arrow-left fa-xs"></i> Back to List</a>
      </div>
    </div>


  </div>
  <div class="card-content">

    <p><b>Are you sure you want to delete this document template? 
      Existing signed documents will not be affected, but your team will no longer be able to send new documents for signature based on this document template. </b></p>
    <p>@Html.DisplayFor(model => model.Name)</p>
    <p>@Html.DisplayFor(model => model.TemplateId)</p>

        <form asp-action="Delete" class="people-color">
            <input type="submit" value="Delete" class="btn btn-primary" />
        </form>

  </div>
</div>

