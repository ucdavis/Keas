@model IEnumerable<Keas.Core.Domain.TeamDocumentSetting>

@{
    ViewData["Title"] = "Document Signing Settings";
}


<div class="card">
  <div class="card-header-primary">
    <div class="card-head">
      <div class="row justify-content-between">
        <h2>Document Settings</h2>
        <a class="btn btn-link" asp-action="Create"><i class="fas fa-plus fa-sm" aria-hidden="true"></i> Create New</a>  
      </div>
    </div>
  </div>
<div class="card-content">
    <p>The following DocuSign templates are available to be sent out to team members for signature</p>
    <table class="table">
        <thead>
            <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TemplateId)
                    </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TemplateId)
                </td>
                <td>
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
    }
        </tbody>
    </table>
</div>

</div>





@section Styles
{
    @{ await Html.RenderPartialAsync("_ReportStylePartial");}
}

@section Scripts
{
    @{ await Html.RenderPartialAsync("_ReportScriptsPartial");}
    <script type="text/javascript">
        $(function () {
            $(".table").dataTable({                
                "columnDefs": [
                    {
                        targets: -1,
                        className: 'dt-body-right',
                        sortable: false,
                    },

                ]
            });
        });
    </script>
}
