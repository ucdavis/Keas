@model Keas.Core.Domain.Team
@{
    ViewData["Title"] = "Regenerate Api Code";
}
<div class="row justify-content-between">
    <div class="col-md-8">
        <form asp-action="RegenerateApiCode">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="card">
                <div class="card-header-primary">
                    <div class="card-head">
                        @if (Model.ApiCode.HasValue)
                        {
                            <h2>Regenerate API Code</h2>
                            <small class="form-text text-muted">Note, if you change the API code, make sure you update any of your external processes that may be using the old one.</small>
                            <small class="form-text text-muted">Click Regenerate to change the API code</small>
                        }
                        else
                        {
                            <h2>Generate</h2>
                            <small class="form-text text-muted">Click Generate to create a new API code</small>
                        }
                    </div>
                </div>
                @if (Model.ApiCode.HasValue)
                {
                    <div class="card-content">
                        <p><b>Current API Code:</b></p>
                        <p>@Html.DisplayFor(model => model.ApiCode)</p>
                    </div>
                }
                <div style="padding: 19px 20px 20px;">
                    @if (Model.ApiCode.HasValue)
                    {
                        <button type="submit" class="btn btn-primary">
                            <i class="icon-save button-icon"></i>
                            Regenerate
                        </button>
                    }
                    else
                    {
                        <button type="submit" class="btn btn-primary">
                            <i class="icon-save button-icon"></i>
                            Generate
                        </button>
                    }
                    <a class="btn btn-link" asp-action="Index">Cancel</a>
                </div>
            </div>
        </form>
        <div class="card">
            <div class="card-header-primary">
                <div class="card-head">
                    <h2>API Links</h2>
                </div>
            </div>
            @if (Model.ApiCode.HasValue)
            {
                <div class="card-content">
                    <p>People Feed:<br />@Context.Request.Host/@Model.Slug/Feed/TeamFeed/@Model.ApiCode</p>
                    <p>People with Workstations: <br />@Context.Request.Host/@Model.Slug/Feed/TeamFeed/@Model.ApiCode?includeSpace=yes</p>
                    <p>Workstations: <br />@Context.Request.Host/@Model.Slug/Feed/WorkstationFeed/@Model.ApiCode</p>
                    <p>Equipment: <br/>@Context.Request.Host/@Model.Slug/Feed/EquipmentFeed/@Model.ApiCode</p>
                    <p>Access: <br/>@Context.Request.Host/@Model.Slug/Feed/AccessFeed/@Model.ApiCode</p>
                    <p>Keys: <br/>@Context.Request.Host/@Model.Slug/Feed/KeyFeed/@Model.ApiCode</p>
                </div>
            }
            else
            {
                <div class="card-content">
                    <p>Generate an API code to see links</p>
                </div>
            }
        </div>
    </div>
    <div class="col-md-4">

        @{await Html.RenderPartialAsync("_TeamAdminMenu");}
    </div>
</div>
