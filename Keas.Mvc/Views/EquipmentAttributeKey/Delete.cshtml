@model Keas.Core.Domain.EquipmentAttributeKey

@{
    ViewData["Title"] = "Delete Equipment Attribute Key";
}


<div class="card">
    <div class="card-header-equipment">
        <div class="card-head">
            <div class="row justify-content-between">
                <h2>Delete Tag</h2>
                <a class="btn btn-link " asp-action="Index"><i class="fas fa-arrow-left fa-xs"></i> Back to List</a>
            </div>
            <p>Note! Deleting does not update the values in your Equipment.</p>
        </div>


    </div>
    <div class="card-content">

        <p><b>Are you sure you want to delete this Equipment Attribute Key?</b></p>

        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Key)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Key)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Description)
            </dd>
        </dl>

        <form asp-action="Delete" class="equipment-color">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-primary"/>
        </form>

    </div>
</div>
