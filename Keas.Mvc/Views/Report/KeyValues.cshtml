@model Keas.Mvc.Models.ReportModels.KeyValueReportViewModel

@{
    ViewData["Title"] = "Key/Values used by Team";
}

<div class="card">
    <div class="card-header-equipment">
        <div class="card-head">
            <h2>Key/Value Pairs in Equipment</h2>
        </div>
    </div>
    <div class="card-content">
        <table class="table dataTable">
            <thead>
                <tr>
                    <th>
                        Key
                    </th>
                    <th>
                        Used Count
                    </th>
                    <th>In Lookup List?</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var pair in Model.KeyPairs)
                {
                    <tr>
                        <td>@pair.Key</td>
                        <td>@pair.Count</td>
                        <td>@pair.FoundInEquipmentAttributeKeys.ToYesNoString()</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Styles {
    @await Html.PartialAsync("_ReportStylePartial")
}

@section Scripts {
    @await Html.PartialAsync("_CommonReportScripts")
    
    
    <script type="text/javascript">
        $('.dataTable').DataTable();
       
    </script>                          
}

